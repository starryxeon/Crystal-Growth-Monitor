<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Crystal_Growth_Monitor.MainWindow"
        Width="400"
        Height="350"
        Title="Crystal Growth Monitor">

    <StackPanel Spacing="10" Margin="20">

        <!-- Text entry -->
        <TextBox Name="InputBox"
                 Watermark="Enter text here"/>

        <!-- Button to copy text -->
        <Button Content="Copy Text"
                Click="CopyText_Click"/>

        <!-- Text output -->
        <TextBlock Name="OutputText"
                   FontSize="16"/>

        <!-- Colored circle -->
        <Ellipse Name="ColorCircle"
                 Width="80"
                 Height="80"
                 Fill="Red"
                 HorizontalAlignment="Center"/>

        <!-- Button to change circle color -->
        <Button Content="Change Circle Color"
                Click="ChangeColor_Click"/>

    </StackPanel>

</Window>
